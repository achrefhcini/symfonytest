<h1>Listes Utilisateur Disponible</h1>
<table class="table table-striped" border="1px solid">
    <thead>
    <tr>
        <th>Utilisateur</th>
        <th>Email</th>
        <th>Age</th>
        <th>Famille</th>
        <th>Race</th>
        <th>Nourriture</th>
        <th>Action</th>


    </tr>
    </thead>
    <tbody>
    {% for user in users %}

    <tr >
        <td>{{ user.username }}</td>
        <td>{{ user.email }}</td>
        <td>{{ user.age }}</td>
        <td>{{ user.famille }}</td>
        <td>{{ user.race }}</td>
        <td>{{ user.nourriture }}</td>
        <th>
            <a href="/relation/{{ user.id }}">Voir</a>
            <a href="/relation/{{ user.id }}/add">Ajouter</a>
        </th>


    </tr>
    {% endfor %}

    </tbody>
</table>
